          },
          "sink": {
            "type": "DelimitedTextSink",
            "storeSettings": {
              "type": "AzureBlobFSWriteSettings"
            },
            "formatSettings": {
              "type": "DelimitedTextWriteSettings",
              "quoteAllText": false,
              "fileExtension": ".csv"
            }
          }
        },
        "inputs": [
          {
            "referenceName": "DS_CO2Emissions",
            "type": "DatasetReference"
          }
        ],
        "outputs": [
